[
    {
        "id": "simple-pull",
        "execute-command": "/var/www/webhooks/commands/simple-pull",
        "pass-arguments-to-command": [
            {
                "source": "payload",
                "name": "repository.name"
            }
        ],
        "trigger-rule": {
            "and": [
                {
                    "match": {
                        "type": "payload-hash-sha1",
                        "secret": "mysecret",
                        "parameter": {
                            "source": "header",
                            "name": "X-Hub-Signature"
                        }
                    }
                },
                {
                    "match": {
                        "type": "value",
                        "value": "tag",
                        "parameter": {
                            "source": "payload",
                            "name": "ref_type"
                        }
                    }
                }
            ]
        }
    }
]