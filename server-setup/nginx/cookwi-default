server {
    listen 80 default_server;
    server_name _;
    return 404 "Not found. Too bad haa ? :-)";
}

server {
    listen 443 ssl;
    server_name _;
    ssl_certificate           /etc/nginx/cert.crt;
    ssl_certificate_key       /etc/nginx/cert.key;
    return 404 "Not found. Too bad haa ? :-)";
}